@using Offwind.WebApp.Infrastructure.Navigation
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="/static/bootstrap/css/bootstrap.css?v=@ViewBag.Version">
    <link rel="stylesheet" type="text/css" href="/static/bootstrap/css/bootstrap-responsive.css?v=@ViewBag.Version">
    <link rel="stylesheet" type="text/css" href="/static/css/theme.css?v=@ViewBag.Version">
    <link rel="stylesheet" type="text/css" href="/static/font-awesome/css/font-awesome.css?v=@ViewBag.Version">
    <link rel="stylesheet" href="/static/css/custom.css?v=@ViewBag.Version">
    @RenderSection("styles", required: false)

    <style type="text/css">
        #line-chart {
            height:300px;
            width:800px;
            margin: 0px auto;
            margin-top: 1em;
        }
        a.brand, a.brand:visited
        {
            font-family: georgia, serif;
            color: #fff;
            font-weight: bold;
        }
        #main
        {
            padding-bottom: 4em;
        }
    </style>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>

<body> 

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                @Html.Partial("~/Views/Shared/__MainMenu.cshtml")
                <a class="brand" href="/">Offwind</a>
            </div>
        </div>
    </div>

    <div id="main" class="container">
        <div class="row-fluid">
            @{
                var navigation = (NavItem<NavUrl>)ViewBag.SideNav;
            }
            @if (navigation != null && navigation.Any())
            {
                <div class="span3">
                    @Html.Partial("~/Views/Shared/__SideNav.cshtml")
                </div>
                <div class="span9">
                    @RenderBody()
                </div>
            }
            else
            {
                <div class="span12">
                    @RenderBody()
                </div>
            }
        </div>
    </div>
    @Html.Partial("~/Views/Shared/__Footer.cshtml")

    <script src="/static/jquery-1.8.1.min.js" type="text/javascript"></script>
    <script src="/static/bootstrap/js/bootstrap.js?v=@ViewBag.Version"></script>
    <script src="/static/bootstrap/js/offwind.js?v=@ViewBag.Version"></script>
    @RenderSection("scripts", required: false)

    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-38789870-2']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>

  </body>
</html>

